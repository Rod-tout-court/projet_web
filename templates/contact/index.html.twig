{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    {% for label, messages in app.flashes(['success']) %}
                        {% for message in messages %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    <h1 class="display-6 mb-4">Nous contacter</h1>
                    <form class="text-left" action="{{ path('app_contact') }}" method="POST">
                        <div class="form-group">
                            <label for="firstname">Pr√©nom</label>
                            <input type="text" class="form-control" id="firstname" name="contact[firstname]">
                        </div>
                        <div class="form-group">
                            <label for="lastname">Nom</label>
                            <input type="text" class="form-control" id="lastname" name="contact[lastname]">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="contact[email]">
                        </div>
                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea class="form-control" id="message" name="contact[message]"></textarea>
                        </div>
                        <button class="btn btn-dark btn-block" type="submit">Envoyer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
