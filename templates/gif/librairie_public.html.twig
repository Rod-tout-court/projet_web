{% extends 'base.html.twig' %}

{% block title %}Gif index{% endblock %}

{% block body %}
    <h1>Gif index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>GifFilename</th>
                <th>Tags</th>
                <th>Visible</th>
            </tr>
        </thead>
        <tbody>
        {% for gif in gifs %}
            <tr>
                <td>{{ gif.id }}</td>
                <td>{{ gif.name }}</td>
                <td><img src="{{ asset('uploads/gif/' ~ gif.gifFilename) }}" class="d-block w-40 mx-auto" alt="{{ gif.name }}">
                <td>{{ gif.tags ? gif.tags|join(', ') : '' }}</td>
                <td>{{ gif.visible ? 'Yes' : 'No' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gif_new') }}">Create new</a>
{% endblock %}
