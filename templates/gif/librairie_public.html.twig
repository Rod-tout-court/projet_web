{% extends 'base.html.twig' %}

{% block title %}Gif index{% endblock %}

{% block body %}
    <h1>Gif index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Gif</th>
                <th>Lien</th>
                <th>Tags</th>
            </tr>
        </thead>
        <tbody>
        {% for gif in gifs %}
            <tr>
                <td><img src="{{ asset('uploads/gif/' ~ gif.gifFilename) }}" class="img-thumbnail" alt="{{ gif.name }}"></td>
                <td>{{ app.request.getSchemeAndHttpHost() }}{{ asset('uploads/gif/' ~ gif.gifFilename) }}</td>
                <td>{{ gif.tags ? gif.tags|join(', ') : '' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun gif Ã  afficher</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gif_new') }}">Create new</a>
{% endblock %}
