{% extends 'base.html.twig' %}

{% block title %}Gif{% endblock %}

{% block body %}
    <h1>Gif</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gif.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gif.name }}</td>
            </tr>
            <tr>
                <th>GifFilename</th>
                <td>{{ gif.gifFilename }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ gif.tags ? gif.tags|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ gif.visible ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_gif_index') }}" class="btn btn-dark btn-sm">Retour</a>

    <a href="{{ path('app_gif_edit', {'id': gif.id}) }}" class="btn btn-dark btn-sm">Modifier</a>

    {{ include('gif/_delete_form.html.twig') }}
{% endblock %}
