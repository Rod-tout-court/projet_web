{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4 text-center">S'inscrire</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                    <div class="mb-3">
                        {{ form_row(registrationForm.mail, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.pseudo, {'attr': {'class': 'form-control', 'placeholder': 'Pseudo'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                    </div>

                    <div class="form-check mb-3">
                        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}"> J'accepte les termes et conditions
                        </label>
                    </div>



                    <button type="submit" class="btn btn-dark btn-block">S'inscrire</button>

                    <div class="mt-3 text-center">
                        <p>Vous avez déjà un compte ? Cliquez ici pour vous <a href="{{ path('app_login')}}"> connecter ! </a></p>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
