{% extends 'base.html.twig' %}

{% block title %}Gestion des messages{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Gestion des messages</h1>

        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Email</th>
                    <th scope="col">Message</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td>{{ contact.id }}</td>
                        <td>{{ contact.firstname }}</td>
                        <td>{{ contact.lastname }}</td>
                        <td>{{ contact.email }}</td>
                        <td>{{ contact.message }}</td>
                        <td>
                            <a class="btn btn-dark btn-sm" href="{{ path('app_message_show', {'id': contact.id}) }}">Show</a>
                            <a class="btn btn-dark btn-sm" href="{{ path('app_message_edit', {'id': contact.id}) }}">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucun message à afficher</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-dark" href="{{ path('app_message_new') }}">Create New</a>
    </div>
{% endblock %}
