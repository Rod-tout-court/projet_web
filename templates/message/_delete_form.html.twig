<form method="post" action="{{ path('app_message_delete', {'id': contact.id}) }}" onsubmit="return confirm('Êtes-vous sûr de supprimer ce message??');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
    <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de supprimer ce message?');">
        <i class="bi bi-trash"></i> Supprimer </button>
</form>
